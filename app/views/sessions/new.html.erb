<% provide(:title, "Log in") %>

<div class="row" id="signup-form">
  <div class="col-md-8 col-md-offset-2"> 
  <h1>Administrator Login</h1>
  <h4 class="text-dark-grey">Please log in if you are an Engineer Without Borders SF Chapter volunteer administrator.</h4> 
    <%= form_for(:session, url: login_path) do |f| %>
      
      <div class="signup-form-box">
        <%= f.label :email, class: "signup-form-label" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="signup-form-box">
        <%= f.label :password, class: "signup-form-label" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-info" %>
    <% end %>
    
    <div class="signup-form-box">
      <p>If you are an Engineer Without Borders SF Chapter volunteer administrator, please <%= link_to "sign up here!", signup_path %></p>
    </div>
  </div>
</div>