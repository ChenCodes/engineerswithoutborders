<p id="notice"><%= notice %></p>

<h1>Listing Volunteers</h1>

<%= form_tag volunteers_path, :id => 'status_form', :method => :get do %>
  Status:
  <% @all_status.each do |status| %>
    <%= status %>
    <%= check_box_tag "status[#{status}]", :id => "status_#{status}" %>
  <% end %>
  <%= submit_tag 'Refresh', :id =>"ratings_submit" %>
<% end %>

<%= form_tag volunteers_path, :id => 'priority_form', :method => :get do %>
  Priority Only:
  <%= check_box_tag "priority",value="0",checked=false, :id => "priority_id" %>
  <%= submit_tag 'Refresh', :id =>"priority_submit" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Area</th>
      <th>Status</th>
      <th>Major</th>
      <th>More Info</th>
      <th>Edit</th>
      <th>Delete</th>
        
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %> <%= volunteer.last_name %>:</td>
        <td><%= volunteer.email %> </td>
        <td><%= volunteer.phone %></td>
        <td><%= volunteer.city %>, <%= volunteer.state %></td>
        <td><%= volunteer.status %></td>
        <td><%= volunteer.major %></td>
        
        <td><%= link_to 'More Info', volunteer %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= button_to 'Delete', volunteer_path(volunteer), :method => :delete, :confirm => 'Are you sure?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

